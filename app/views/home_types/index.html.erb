<p id="notice"><%= notice %></p>

<h1>Home Types</h1>

<table>
  <thead>
    <tr>
      <th>Home type name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_types.each do |home_type| %>
      <tr>
        <td><%= home_type.home_type_name %></td>
        <td><%= home_type.image %></td>
        <td><%= link_to 'Show', home_type %></td>
        <td><%= link_to 'Edit', edit_home_type_path(home_type) %></td>
        <td><%= link_to 'Destroy', home_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

