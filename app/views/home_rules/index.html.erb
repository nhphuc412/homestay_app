<p id="notice"><%= notice %></p>

<h1>Home Rules</h1>

<table>
  <thead>
    <tr>
      <th>Rule</th>
      <th>Home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_rules.each do |home_rule| %>
      <tr>
        <td><%= home_rule.rule_id %></td>
        <td><%= home_rule.home_id %></td>
        <td><%= link_to 'Show', home_rule %></td>
        <td><%= link_to 'Edit', edit_home_rule_path(home_rule) %></td>
        <td><%= link_to 'Destroy', home_rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

